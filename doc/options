% OPTION := [*|=]OPTIONNAME[(--contradicting-option ...)] [ARGUMENT]; Explanation.
% OPTIONNAME := [^ ]* | [^ ]* "|" OPTIONNAME
% ARGUMENT := "BOOL" | "NUMFOUR" | "TEX" | "STRING" | DIM name | "DIMS@"("SPACE"|"COMMA") name,name[,...] | ":" [^:;]* ":" [^:;]*
% COMMANDLINE := "--" ...
%
% The contradicting options are for excluding the current option when one of the contradicting ones are given.
% The `*` means, this option can be given multiple times.
% The `=` means, this option is to be given as the only option.

# Change operation mode
=h|help; Print help message.
=V|version; Print the version number.
=configpath; Print the `configpath` variable.
q|quiet; Suppress verbose commentary on progress.
batch; Run pdfjam sequentially on each input file in turn, and produce a separate output file for each input.
+checkfiles; Use `file` utility to determine file type.
vanilla; Suppress the reading of any pdfjam configuration files.
enc :encoding:_enc; Command-line encoding as understood by `iconv`.

# Define where to put files
=o|outfile|output :output:_output; File or directory name for output(s).
suffix STRING; Suffix for output, when file name is not given explicitely.
+tidy(--builddir); Clean temporary build directory.
builddir(--tidy --no-tidy) :directory:_files -/; Set build directory.

# Configure LaTeX run
latex :engine:_absolute_command_paths; Absolute path to LaTeX engine to be used.
*latexopts :latex command line options: ; Provide arguments to use when calling the LaTeX engine.
%--latexopts
*preamble TEX; Append code to the LaTeX preamble.
--preamble '\usepackage{pifont}' --picturecommand '\put(.5\paperwidth,.8\paperheight){\Huge\Pisymbol{mvs}{"66}}' a4.pdf 1
runs NUM number of runs; Run latex N times, for each output document made.

# Set PDF metadata
+keepinfo; Preserve Title, Author, Subject and Keywords (from the last input PDF) in the output PDF file.
pdftitle STRING; Set Title of the output PDF file.
pdfauthor STRING; Set Author of the output PDF file.
pdfsubject STRING; Set Subject of the output PDF file.
pdfkeywords STRING; Set Keywords of the output PDF file.

# Adjust page
paper PAPER; Paper format.
--paper letter a4.pdf 1-2
papersize DIMS@COMMA width heigth; Specify a paper size as WIDTH,HEIGHT.
--papersize 15cm,30cm a4.pdf 1-2
+landscape; Exchange width and height of paper.
--landscape square.pdf 1
+twoside; Specify `twoside` document class option.
--twoside --offset '1cm 0' a4.pdf 1-2
+otheredge; Rotate every odd page by 180 degrees.
--otheredge a4.pdf 1-2
pagecolor :rgb:_pagecolor; Background color.
--pagecolor 255,255,0 a4text.pdf 1

# Pdfpages settings
## N-up pages
!pages :pagespec:_pagespec; Select pages to insert.
!--pages 1-2 a4.pdf a4text.pdf
nup :XxY:_nup; Put multiple logical pages onto each sheet of paper.
--nup 2x3 a4.pdf 1-9
column BOOL; Use column-major layout, where successive pages are arranged in columns down the paper.
--column true --nup 4x2 --landscape a4.pdf 1-11
columnstrict BOOL; For column-major layout only: Do not balance the columns on the last page.
--columnstrict true --column true --nup 2x3 a4.pdf 1-10

## Shift pages
delta DIMS@SPACE horizontal space,vertical space; Put some horizontal and vertical space between the logical pages.
--delta '3cm 1cm' --nup 2x2 a4.pdf 1-4
offset DIMS@SPACE horizontal displacement,vertical displacement; Displace the origin of the inserted pages.
--offset '3cm 1cm' a4.pdf 1
frame BOOL; Put a frame around each logical page.
--frame true --nup 2x2 --offset '2mm 3mm' a4.pdf 1-4

## Scale pages
noautoscale BOOL; Suppress automatic scaling of pages.
--noautoscale true square.pdf 1
fitpaper BOOL; Adjust the paper size to the size of the inserted document.
--fitpaper true square.pdf 1
turn BOOL; Tell PDF viewer to display landscape pages in landscape orientation. On by default.
pagetemplate NUM pagenumber; Declare page to be used as a template. All other pages are scaled such that they match within its size.
--pagetemplate 2 --pages 1 a4.pdf a5.pdf
templatesize DIMS@COMMA width height; Specify size of page template. All pages are scaled such that they match within this size.
--templatesize '50cm,10cm' --pages 1 a4.pdf a4landscape.pdf
rotateoversize BOOL; Rotate oversized pages.
--rotateoversize true --pages 1 a4.pdf a4landscape.pdf

## Mirror pages
reflect BOOL; Reflect output pages.
--reflect true --nup 2x1 --landscape a4.pdf 1-2
reflect* BOOL; Reflect input pages.
--reflect* true --nup 2x1 --landscape a4.pdf 1-2

## Create signatures
signature(--signature* --booklet --booklet*) NUMFOUR; Create booklets by rearranging pages into signatures of 2 pages each.
--signature 4 --nup 2x1 --landscape a4.pdf 1-8
signature*(--signature --booklet --booklet*) NUMFOUR; Similar to signature, but for right-edge binding.
--signature* 4 --nup 2x1 --landscape a4.pdf 1-8
booklet(--signature --signature* --booklet*) BOOL; Same as signature with signature size chosen such that all pages fit into one signature.
--booklet true --nup 2x1 --landscape a4.pdf 1-8
booklet*(--signature --signature* --booklet) BOOL; Similar to booklet, but for right-edge binding.
--booklet* true --nup 2x1 --landscape a4.pdf 1-8
flip-other-edge BOOL; For signatures/booklets: set duplex binding edge perpendicular (instead of parallel) to signature binding edge. Has same result as `otheredge`.
--flip-other-edge true --booklet true --nup 2x1 --landscape a4.pdf 1-4

## Add blank pages
openright BOOL; Put an empty page before the first logical page.
--openright true --nup 2x1 a4.pdf 1-3
openrighteach BOOL; Put an empty page before the first logical page of each file.
--openrighteach true --nup 2x1 a4.pdf 1 a4text.pdf 1-3

## Duplicate pages
doublepages(--doublepagestwist --doublepagestwistodd --doublepagestwist* --doublepagestwistodd* --duplicatepages) BOOL; Insert every page twice.
--doublepages true --nup 2x1 a4.pdf 1-2
doublepagestwist(--doublepages --doublepagestwistodd --doublepagestwist* --doublepagestwistodd* --duplicatepages) BOOL; Insert every page twice: once upside down and once normally.
--doublepagestwist true --nup 2x1 a4.pdf 1-2
doublepagestwistodd(--doublepages --doublepagestwist --doublepagestwist* --doublepagestwistodd* --duplicatepages) BOOL; Insert every page twice: once normally and once upside down.
--doublepagestwistodd true --nup 2x1 a4.pdf 1-2
doublepagestwist*(--doublepages --doublepagestwist --doublepagestwistodd --doublepagestwistodd* --duplicatepages) BOOL; Insert every page twice: for odd pages, the first copy is upside down; for even pages, the second copy.
--doublepagestwist* true --nup 2x1 a4.pdf 1-2
doublepagestwistodd*(--doublepages --doublepagestwist --doublepagestwistodd --doublepagestwist* --duplicatepages) BOOL; Insert every page twice: for odd pages, the second copy is upside down; for even pages, the first copy.
--doublepagestwistodd* true --nup 2x1 a4.pdf 1-2
duplicatepages(--doublepages --doublepagestwist --doublepagestwistodd --doublepagestwist* --doublepagestwistodd*) NUM; Insert every page NUM times.
--duplicatepages 3 a4.pdf 1

## Run LaTeX commands
pagecommand TEX; Declare LaTeX commands, which are executed on each sheet of paper.
--pagecommand '\section{Welcome to page \thepage}\thispagestyle{empty}' a4.pdf 1-2
pagecommand* TEX; Declare LaTeX commands, which are executed on the very first page only.
--pagecommand* '\section{Some pretty number pages}' a4.pdf 1-2
picturecommand TEX; Similar to pagecommand, but executed within a picture environment with base point at the lower left page corner.
--picturecommand '\put(72,72){Welcome to page \thepage}' a4.pdf 1-2
picturecommand* TEX; Similar to picturecommand, but for very first page only.
--picturecommand* '\put(72,72){Some pretty number pages' a4.pdf 1-2

## Add hyperlinks
!lastpage NUM; DVI mode only: Specify the number of pages.
link BOOL; Each inserted page becomes the target of the hyperlink ⟨filename⟩.⟨pagenumber⟩.
linkname NAME; For link option only: Change the linkname base from ⟨filname⟩ to NAME.
% ?thread BOOL; Combine inserted pages to an article thread.
threadname NAME; For thread option only: Change the thread name from ⟨filename⟩ to NAME.
linkfit :destination:_linkfit; For link option only: Specify, how the viewer displays a linked page.
>(Fit|FitH ⟨top⟩|FitV ⟨left⟩|FitB|FitBH ⟨top⟩|FitBV ⟨left⟩|Region)
!linktodoc BOOL; Turn the inserted pages into hyperlinks to the document from which they were extracted.
!linktodocfit (/Fit|/FitH ⟨top⟩|/FitV ⟨left⟩|/FitB|/FitBH ⟨top⟩|/FitBV ⟨left⟩|/FitR ⟨...⟩|/XYZ ⟨...⟩); For linktodoc option only: Specify, how the viewer displays a linked page.
!newwindow BOOL; For linktodoc option only: Open linked files in new window. On by default.
!linkfilename PATH; Set the name of the file to be linked to by the option linktodoc.
addtotoc :pagenumber,section,level,heading,label:_addtotoc; Add an entry to the table of contents.
addtolist :pagenumber,type,heading,label:_addtolist; Add an entry to the list of figures, the list of tables, or any other list.
!survey BOOL; See doc, would need extra support by pdfjam.
!survey-nolink BOOL; Similar to survey.
!xr-prefix NAME; Used by survey.

!landscape BOOL; Rotate output sheet format by 90 degrees.
!deltax DIM; Set X part of delta.
!deltay DIM; Set Y part of delta.

# Graphicx options
viewport DIMS@SPACE left,bottom,right,top; Consider image to consist of given rectangle only.
--viewport '0 4cm 8cm 16cm' a4.pdf 1
trim DIMS@SPACE left,bottom,right,top; Similar to viewport, but here the four lengths specify the amount to remove or add to each side.
--trim '0 4cm 8cm 16cm' a4.pdf 1
angle ANGLE; Rotation angle (counterclockwise).
--angle 45 a4.pdf 1
origin :origin:(c l r b t bl br tl tr); Origin for rotation.
width DIM width; Required width. The graphic is scaled to this width.
--width 10cm a4.pdf 1
height DIM height; Required height. The graphic is scaled to this height.
--height 10cm a4.pdf 1
totalheight DIM height; Required height+depth. Differs from height if rotation has occured.
--totalheight 10cm --angle 45 a4.pdf 1
keepaspectratio BOOL; Do not distort figure if both width and height are given.
--keepaspectratio true --width 10cm --height 10cm a4.pdf 1
scale :float: ; Scale factor.
--scale 2 a4.pdf 1
clip BOOL; Clip the graphic to the viewport.
--clip true --viewport '0 4cm 8cm 16cm' a4.pdf 1
pagebox :bounding box:(mediabox cropbox bleedbox trimbox artbox); Specify which PDF bounding box specification to read.
draft BOOL; Switch to draft mode.
--draft true a4.pdf 1
% ## Eps file settings
!bb 'LEFT BOTTOM RIGHT TOP'; Correct the 'Bounding Box' of the printed region within the eps file.
!bbllx LEFT
!bblly BOTTOM
!bburx RIGHT
!bbury TOP
!natwidth RIGHT
!natheight TOP
!hiresbb BOOL; Look for %%HiResBoundingBox instead of %%BoundingBox in eps files.
% ## Graphics types
!type TYPE; Specify the graphics type.
!ext EXTENSION; To be used with type.
!read EXTENSION; To be used with type.
!command TEX; To be used with type.
!decodearray ?; Why does this even appear in this list?
!quiet; Skip writing information to the log.
!page PAGENUMBER; Page of a multi-page PDF file. Overwritten by pdfpages’s page.
!interpolate BOOL; Enable interpolation of bitmap images by the viewer.
!alt TEXT; Alternative text for accessibility uses. Used for tagged PDF.
